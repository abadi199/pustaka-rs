{
  "name": "pustaka-rs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "elm-test",
    "postinstall": "cargo install --version 1.9.2 watchexec",
    "watch": "run-p watch:elm watch:ts watch:rust",
    "watch:elm": "watchexec --restart --exts elm -w src/client/ 'npm run build:elm'",
    "watch:ts": "parcel watch src/client/*.ts -d app/assets/ -t browser",
    "watch:rust": "watchexec --restart -w src/server 'npm run start:server'",
    "build:elm": "elm make src/client/Main.elm --debug --output app/assets/app.js",
    "build:ts": "parcel build src/client/*.ts -d app/assets/ -t browser",
    "prod:elm": "tput reset && elm make src/client/Main.elm --optimize --output app/assets/app.js",
    "prod:rust": "cargo build --bin pustaka --release",
    "start:server": "cargo run --bin pustaka",
    "seed": "cargo run --bin seed",
    "start": "npm run watch",
    "diesel:install": "cargo install diesel_cli --no-default-features --features sqlite",
    "diesel:run": "diesel migration run",
    "scan": "cargo run --bin scanner",
    "clean:db": "sqlite3 pustaka.db 'delete from publication_category; delete from publication; delete from publication_progress'"
  },
  "author": "Abadi Kurniawan",
  "license": "ISC",
  "devDependencies": {
    "@types/lodash": "^4.14.121",
    "elm": "0.19.0-bugfix6",
    "elm-format": "0.8.0",
    "elm-test": "^0.19.0-rev6",
    "epubjs": "^0.3.83",
    "lodash": "^4.17.11",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.11.0",
    "typescript": "^3.3.3333"
  },
  "dependencies": {}
}
