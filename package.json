{
  "name": "pustaka-rs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "elm-test",
    "watch": "run-p watch:elm watch:ts watch:rust",
    "watch:elm": "watchexec --restart --exts elm -w src/client/ 'npm run build:elm'",
    "watch:ts": "parcel watch src/client/*.ts -d app/js/ -t browser",
    "watch:rust": "watchexec --restart -w src/server 'npm run start:server'",
    "build:elm": "elm make src/client/Main.elm --debug --output app/js/app.js",
    "build:ts": "parcel build src/client/*.ts -d app/js/ -t browser",
    "prod:ts": "parcel build src/client/*.ts -d app/js/ --no-source-maps",
    "prod:elm": "parcel build src/client/Main.elm -d app/js/ -o app.js",
    "prod": "npm run prod:ts && npm run prod:elm",
    "start:server": "cd app && cargo run --bin pustaka",
    "seed": "cargo run --bin seed",
    "start": "npm run watch",
    "diesel:install": "cargo install diesel_cli --no-default-features --features sqlite",
    "diesel:run": "diesel migration run",
    "scan": "cargo run --bin scanner",
    "clean:db": "sqlite3 pustaka.db 'delete from publication_category; delete from publication; delete from publication_progress'"
  },
  "author": "Abadi Kurniawan",
  "license": "ISC",
  "devDependencies": {
    "@types/lodash": "^4.14.123",
    "elm": "0.19.0-bugfix6",
    "elm-format": "0.8.0",
    "elm-test": "^0.19.0-rev6",
    "epubjs": "^0.3.83",
    "lodash": "^4.17.11",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "shx": "^0.3.2",
    "typescript": "^3.3.4000"
  },
  "dependencies": {}
}
